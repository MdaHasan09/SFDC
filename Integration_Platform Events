 apex
 trigger HandleFulfillmentEvent on OrderFulfilledEvent__e (after insert) {
    List<Order__c> toUpdate = new List<Order__c>();
    for (OrderFulfilledEvent__e evt : Trigger.new) {
        String ordNum = evt.OrderNumber__c;
        String stat = evt.FulfillmentStatus__c;
        Order__c[] ords = [SELECT Id FROM Order__c WHERE Order_Number__c = :ordNum
 LIMIT 1];
        if (!ords.isEmpty()) {
            ords[0].Fulfillment_Status__c = stat;
            toUpdate.add(ords[0]);
        }
    }
    if (!toUpdate.isEmpty()) update toUpdate;
 }
