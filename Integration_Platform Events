 apex
 trigger CustomerChangeHandler on CustomerChangeEvent__e (after insert) {
    List<Account> updates = new List<Account>();
    for (CustomerChangeEvent__e evt : Trigger.new) {
        Account acc = [SELECT Id FROM Account WHERE External_Id__c = :evt.ExternalId__c
 LIMIT 1];
        acc.Name = evt.Name__c;
        acc.Phone = evt.Phone__c;
        updates.add(acc);
    }
    if (!updates.isEmpty()) update updates;
 }
